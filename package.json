{
  "name": "kotlin-project-generator",
  "displayName": "Kotlin Project Generator",
  "description": "Generates Kotlin projects like Java projects",
  "version": "1.0.3",
  "publisher": "thomas-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/ThomasSimpDev/kotlin-project-generator.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:kotlin-project-generator.createKotlinProject"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kotlin-project-generator.createKotlinProject",
        "title": "Create Kotlin Project",
        "category": "Kotlin Project Generator"
      }
    ],
    "menus": {
      "command palette": [
        {
          "command": "kotlin-project-generator.createKotlinProject"
        }
      ],
      "explorer/context": [
        {
          "command": "kotlin-project-generator.createKotlinProject",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./out/test/runTest.js",
    "clean": "rm -rf out"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.2.0",
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "mocha": "^11.7.2",
    "typescript": "^4.9.4"
  }
}
